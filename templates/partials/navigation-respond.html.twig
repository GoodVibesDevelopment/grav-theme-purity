    <div class="pure-u-1 pure-u-md-1-3">
        <div class="pure-menu">
            <a href="{{ base_url_absolute }}" class="pure-menu-heading custom-brand">{{ site.title|upper }}</a>
            <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
        </div>
    </div>
    <div class="pure-u-1 pure-u-md-2-3">
        <div class="pure-menu pure-menu-horizontal custom-menu-3 custom-can-transform">
            <ul class="pure-menu-list">
        {% for page in pages.children %}
        {% if page.visible %}
            {% set current_page = (page.active or page.activeChild) ? 'current' : '' %}
                <li class="pure-menu-item {{ current_page }}">
                    <a class="pure-menu-link" href="{{ page.url }}">
                        {{ page.menu }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
        {% for mitem in site.menu %}
            <li class="pure-menu-item">
                <a class="pure-menu-link" href="{{ mitem.link }}">{{ mitem.text }}</a>
            </li>
        {% endfor %}
            </ul>
        </div>
    </div>